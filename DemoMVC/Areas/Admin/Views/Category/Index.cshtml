@model List<Category>;
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Category</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="bi bi-plus"></i>Add Category</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <td width="50%">
                @category.Name
            </td>
            <td width="30%">
                @category.DisplayOrder
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id"><i class="bi bi-trash"></i> Delete</a>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@category.Id"><i class="bi bi-pencil-square"></i> Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>


