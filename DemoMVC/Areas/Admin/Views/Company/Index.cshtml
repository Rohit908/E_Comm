@model List<Company>;
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Companies</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Upsert" asp-controller="Company" class="btn btn-primary"><i class="bi bi-plus"></i>Add Company</a>
    </div>
</div>

<div class="mt-5">
<table id="companyTable" class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>
</div>

@section Scripts{
    <script src="~/js/Admin/company.js"></script>
}


